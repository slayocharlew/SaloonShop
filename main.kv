#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name:"home"
        MDBoxLayout:
            orientation:"vertical"
            MDToolbar:
                title: "Book Saloon"
                specific_text_color:78/255, 82/255, 84/255, 1
                md_bg_color:1, 1, 1, 1
                right_action_items: [["segment", lambda x: app.screen_capture("set")]]

            MDTabs:
                allow_stretch:False
                background_color:1, 1, 1, 1
                indicator_color:128/255, 0/255, 0/255, .4
                tab_hint_x:True
                text_color_active:78/255, 82/255, 84/255, 1
                text_color_normal:.5, .5, .5, 1

                Tab:
                    title:"Today Schedule"
                    FloatLayout:
                        RecycleView:
                            id: work
                            key_viewclass: 'viewclass'
                            key_size: 'height'
                            pos_hint:{"center_x":.5,"top":.97}
                            RecycleBoxLayout:
                                id:wali
                                spacing:dp(10)
                                padding: dp(10)
                                default_size: None, dp(200)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'
                Tab:
                    title:"Pending-Schedule"
                    FloatLayout:
                        RecycleView:
                            id: order
                            key_viewclass: 'viewclass'
                            key_size: 'height'
                            pos_hint:{"center_x":.5,"top":.97}
                            RecycleBoxLayout:
                                id:wali
                                spacing:dp(10)
                                padding: dp(10)
                                default_size: None, dp(200)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'

    MDScreen:
        name:"set"
        MDBoxLayout:
            orientation:"vertical"
            MDToolbar:
                title: "Hairstyle"
                specific_text_color:78/255, 82/255, 84/255, 1
                md_bg_color:1, 1, 1, 1
                right_action_items: [["segment", lambda x: app.callback()]]
            MDTabs:
                allow_stretch:False
                background_color:1, 1, 1, 1
                indicator_color:128/255, 0/255, 0/255, .4
                tab_hint_x:True
                text_color_active:78/255, 82/255, 84/255, 1
                text_color_normal:.5, .5, .5, 1

                Tab:
                    title: "Set Time"
                    FloatLayout:
                        Front:
                            pos_hint:{'center_x':.5, 'center_y':.85}

                        MDRaisedButton:
                            text: app.start_time
                            pos_hint:{'center_x': .3, 'center_y': .85}
                            font_size: "18sp"
                            on_release:
                                app.show_time_starting()

                        MDRaisedButton:
                            text: app.closing_time
                            pos_hint:{'center_x': .7, 'center_y': .85}
                            font_size: "18sp"
                            md_bg_color: 128/255, 0/255, 0/255, .4
                            on_release:
                                app.show_time_closing()

                        Front:
                            pos_hint:{'center_x':.5, 'center_y':.4}
                            size:app.size_x/1.1,app.size_y/2
                        MDLabel:
                            halign:"center"
                            text:"Hair style details"
                            pos_hint:{'center_x': .5, 'center_y': .65}
                        MDTextField:
                            id:name
                            mode: "rectangle"
                            #fill_color: 0, 0, 0, .4
                            size_hint: .6, .08
                            pos_hint:{'center_x':.5, 'center_y':.55}
                            hint_text:"Hair style"
                            #text_color: 1, 1, 1, 1
                            font_size: dp(15)
                        PNumberField:
                            id:price
                            mode: "rectangle"
                            #fill_color: 0, 0, 0, .4
                            size_hint: .3, .08
                            pos_hint:{'center_x':.5, 'center_y':.43}
                            hint_text:"Price"
                            #text_color: 1, 1, 1, 1
                            font_size: dp(20)

                        TNumberField:
                            id:time
                            mode: "rectangle"
                            #fill_color: 0, 0, 0, .4
                            size_hint: .1, .08
                            pos_hint:{'center_x':.5, 'center_y':.318}
                            helper_text:"Time taken to make"
                            hint_text:"Time"
                            #text_color: 1, 1, 1, 1
                            font_size: dp(25)

                        MDRaisedButton:
                            text: "Add hair style"
                            pos_hint:{'center_x': .5, 'center_y': .2}
                            font_size: "18sp"
                            md_bg_color: 128/255, 0/255, 0/255, .4
                            on_release:
                                app.hairstyle(name.text, price.text, time.text)

                Tab:
                    title: "Hair styles"
                    FloatLayout:
                        RecycleView:
                            id: hair
                            key_viewclass: 'viewclass'
                            key_size: 'height'
                            pos_hint:{"center_x":.5,"top":.97}
                            RecycleBoxLayout:
                                id:wali
                                spacing:dp(10)
                                padding: dp(10)
                                default_size: None, dp(55)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'
